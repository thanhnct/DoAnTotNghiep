@using Project_BookStoreCT.Models.ViewModels;
@{
    ViewBag.Title = "Bill";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- breadcrumbs-area-end -->
<!-- entry-header-area-start -->
<!-- entry-header-area-end -->
<!-- coupon-area-area-start -->
<div class="coupon-area mb-70">

</div>
<!-- coupon-area-area-end -->
<!-- checkout-area-start -->
<div class="checkout-area mb-70">
    <div class="container">
        <div class="row">
            <form id="form1" method="post">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="checkbox-form">
                        <h3>CHI TIẾT HÓA ĐƠN</h3>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="checkout-form-list">
                                    <label>Tên khách hàng<span class="required">*</span> </label>
                                    <input required="required" name="txtKhachHang" id="txtKhachHang" type="text" placeholder="">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="checkout-form-list">
                                    <label>Địa chỉ <span class="required">*</span></label>
                                    <input required="required" name="txtDiaChi" id="txtDiaChi" type="text">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="checkout-form-list">
                                    <label>Số điện thoại <span class="required">*</span></label>
                                    <input required="required" name="txtSoDienThoai" id="txtSoDienThoai" type="number">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                @if (Session["Cart"] != null)
                                {
                                    <div class="buttons-cart mb-30">
                                        <ul>
                                            <li><input type="submit" formaction="~/Home/BillPayment" name="Bill" value="Đặt hàng" /> </li>
                                            <li><input type="submit" formaction="~/Home/PaymentWithPaypal" value="Thanh toán Paypal" /> </li>
                                            <li><a href="">Cập nhập đơn hàng</a></li>
                                        </ul>
                                    </div>
                                }
                                </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="your-order">
                        <h3>ĐƠN HÀNG CỦA BẠN</h3>
                        <div class="your-order-table table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th class="product-name">Sản phẩm</th>
                                        <th class="product-total">Tổng giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Session["Cart"] != null)
                                    {
                                        foreach (Cart_ViewModels cart in (List<Cart_ViewModels>)Session["Cart"])
                                        {
                                            <tr class="cart_item">
                                                <td class="product-name">
                                                    @cart.bookname <strong class="product-quantity"> × @cart.number</strong>
                                                </td>
                                                <td class="product-total">
                                                    <span class="amount">@cart.total$</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                        </tbody>
                                <tfoot>
                                    <tr class="order-total">
                                        <th>THÀNH TIỀN</th>
                                        <td>
                                            @if (Session["ThanhTien"] != null)
                                            {
                                                <strong><span class="amount">@Session["ThanhTien"]$</span></strong>
                                            }
                                            else
                                            {
                                                <strong><span class="amount">0$</span></strong>
                                            }
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



