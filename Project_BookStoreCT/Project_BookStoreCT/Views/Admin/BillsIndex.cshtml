
@{
    ViewBag.Title = "BillsIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header card">
<div class="row align-items-end">
    <div class="col-lg-8">
        <div class="page-header-title">
            <i class="feather icon-home bg-c-blue"></i>
            <div class="d-inline">
                <h5>Admin</h5>
                <span>Manager</span>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="page-header-breadcrumb">
            <ul class=" breadcrumb breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="index.html"><i class="feather icon-home"></i></a>
                </li>
                <li class="breadcrumb-item"><a href="#!">Index</a> </li>
            </ul>
        </div>
    </div>
</div>
</div>
<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="col-md-12">
                    <div class="card table-card">
                        <div class="card-header">
                            <h5>User Index</h5>
                            <div class="card-header-right">
                                <ul class="list-unstyled card-option">
                                    <li class="first-opt"><i class="feather icon-chevron-left open-card-option"></i></li>
                                    <li><i class="feather icon-maximize full-card"></i></li>
                                    <li><i class="feather icon-minus minimize-card"></i></li>
                                    <li><i class="feather icon-chevron-left open-card-option"></i></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-block p-b-0">
                            <div class="table-responsive">
                                <table id="dtBasicExample" class="table table-hover m-b-0 table-striped table-bordered table-sm">
                                    <thead>
                                        <tr>
                                            <th>Tên khách hàng</th>
                                            <th>Địa chỉ</th>
                                            <th>Số điện thoại</th>
                                            <th>Ngày đặt hàng</th>
                                            <th>Thanh toán</th>
                                            <th>Giao hàng</th>
                                            <th>Ngày giao</th>
                                            <th>Tổng tiền hóa đơn</th>                          
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var b in ViewBag.Bills)
                                        {
                                        <tr id="row_@b.Bill_ID">
                                            <td>@b.customerName</td>                                       
                                            <td>@b.customerAddress</td>
                                            <td>@b.phoneNumber</td>
                                            <td>@b.date_set</td>
                                            @if (b.isPayment == true)
                                            {
                                                <td>Đã thanh toán</td>
                                            }
                                            else
                                            {
                                                <td>Chưa thanh toán</td>
                                            }
                                            @if (b.isDelivered == true)
                                            {
                                                <td>Đã giao hàng</td>
                                            }
                                            else
                                            {
                                                <td>Chưa giao hàng</td>
                                            }
                                            <td>@b.delivery_date</td>
                                            <td>@b.total</td>    
                                            <td>
                                                <input type="button" onclick="Detail(@b.Bill_ID)" class="btn btn-primary" value="Chi tiết hóa đơn" />
                                                <input type="button" onclick="Delete(@b.Bill_ID,this)" class="btn btn-danger" value="Xóa" />
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
    });
    function Detail(bid) {
        location.href = './DetailBills?bid=' + bid;
    }
    function Delete(bid, e) {
        swal({
            title: "Bạn chắc chắn muốn xóa",
            text: "Sau khi xóa không thể phục hồi",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Đồng ý xóa!",
            cancelButtonText: "Tôi không xóa",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        url: "/Admin/DeleteBills",
                        method: "POST",
                        dataType: "json",
                        data: {
                            'bid': bid
                        },
                    }).done(function (data) {
                        if (data.mess_ == "1") {
                            swal({
                                title: "Đã xóa",
                                text: "Bạn đã xóa thành công",
                                type: "success",
                                timer: 3000
                            },
                                function () {
                                    $(e).closest("tr").remove();
                                });
                        }
                        else {
                            swal("Xóa thất bại.");
                        }
                    });
                } else {
                    swal("An toàn là trên hết.");
                }
            });
    }
    
</script>